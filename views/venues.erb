<% if @venues.any?() %>
  <ul>
    <% @venues.each() do |venue| %>
      <li><a href="/venues/<%= venue.id() %>"><%= venue.name() %></a></li>
    <% end %>
  </ul>
<% else %>
  I don't know about any venues. Add one below!
<% end %>

<form action="/venues" method="post">
  <div class="form-group">
    <label class="form-label" for="name">Add new venue:</label>
    <input class="form-control" id="name" type="text" name="name" autofocus>
  </div>
  <button type="submit" class="btn btn-sm btn-success"><span class="glyphicon glyphicon-plus"></span> Add Venue</button>
</form>

<hr>
<a href="/">Back</a>
