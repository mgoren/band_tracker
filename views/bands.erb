<% if @bands.any?() %>
  <ul>
    <% @bands.each() do |band| %>
      <li><a href="/bands/<%= band.id() %>"><%= band.name() %></a></li>
    <% end %>
  </ul>
<% else %>
  I don't know about any bands. Add one below!
<% end %>

<form action="/bands" method="post">
  <div class="form-group">
    <label class="form-label" for="name">Add new band:</label>
    <input class="form-control" id="name" type="text" name="name" autofocus>
  </div>
  <button type="submit" class="btn btn-sm btn-success"><span class="glyphicon glyphicon-plus"></span> Add Band</button>
</form>

<hr>
<a href="/">Back</a>
